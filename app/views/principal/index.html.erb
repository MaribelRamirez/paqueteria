<div class="container ">
  <div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6 ">
        <h5 class="text-center">Búsqueda con número de rastreo</h5><br>

        <%= form_tag({:action => :buscar}, :multipart => true) do %>
          <label>Número de guía:</label>
          <input class="form-control" placeholder="Ingresa el número de rastreo..." type="text" name="numero" id="numero" required>
          <button type="submit" class="btn btn-secondary form-control">Buscar</button>
        <% end %>
      </div>

      <div class="col-md-6 ">
        <h5 class="text-center">Búsqueda cargando archivo Json</h5><br>
        <%= form_tag({:action => :buscar_json}, :multipart => true) do %>
          <labe class="">seleccione un archivo Json de su ordenador:</labe><br><br>
          <%= file_field_tag "file" , :required => true%>
          <button type="submit" class="btn btn-secondary form-control">Buscar</button>
        <%end%>
      </div>
    </div>
  </div>
</div>
</div>

